<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <declare-styleable name="bank_card_number">
        <attr name="card_number" format="string"></attr>
        <attr name="card_type" format="string"></attr>
    </declare-styleable>

    <style name="bank_card_editText_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3f3f3f</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:maxLength">1</item>
        <item name="android:numeric">integer</item>
    </style>

</resources>